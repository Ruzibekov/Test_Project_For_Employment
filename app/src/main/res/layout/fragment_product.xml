<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.product.ProductFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="232dp"
        app:cardBackgroundColor="@color/light"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/desc_item_category_eats"
                android:src="@drawable/ic_launcher_foreground" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:orientation="horizontal"
                android:padding="8dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:contentDescription="@string/desc_like_icon"
                            android:src="@drawable/ic_like"
                            app:tint="@color/black" />

                    </FrameLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:contentDescription="@string/desc_close_icon"
                            android:src="@drawable/ic_close"
                            app:tint="@color/black" />

                    </FrameLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </FrameLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        style="@style/textStyle.500"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:text="Рыба с овощами и рисом" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            style="@style/textStyle"
            android:textColor="@color/black"
            android:textSize="14sp"
            tools:text="799 ₽ " />

        <TextView
            style="@style/textStyle"
            android:textColor="@color/black_40"
            android:textSize="14sp"
            tools:text="· 560г" />
    </LinearLayout>

    <TextView
        style="@style/textStyle"
        android:layout_marginTop="8dp"
        android:lineHeight="15.4dp"
        android:textColor="@color/black_65"
        android:textSize="14sp"
        tools:targetApi="p"
        tools:text="Рыба маринованная со специями, лимонным соком, соевым соусом и запечeнная в духовке с лучком, томатами и картошечкой под золотистой майонезно-сырной шубкой" />

    <androidx.appcompat.widget.AppCompatButton
        style="@style/primaryButton"
        android:layout_marginTop="16dp"
        android:text="@string/bnt_add_to_basket" />

</LinearLayout>